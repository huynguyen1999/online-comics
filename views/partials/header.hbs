<style>
  #form_search{width:40%;}
</style>

<nav class="navbar navbar-expand-md navbar-light bg-light">
  <div class="container">
    <a href="/" class="navbar-brand">
      <img
        src="/public/images/icon.png"
        width="30"
        height="30"
        class="rounded-circle"
      />
      Online Comics
    </a>

    <form
      class="form-inline my-2 my-lg-0 d-flex"
      method="GET"
      action="#"
      id="form_search"
    >
      <input
        class="form-control"
        type="search"
        placeholder="Search"
        id="search_bar"
        autocomplete="off"
      />
      <div class="btn my-1" id="btn_search" >
        <i class="bi bi-search" aria-hidden="true"></i>
      </div>
    </form>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#headermenu"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="headermenu">
      <ul class="navbar-nav ms-auto">
        {{#if is_auth}}
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Welcome our
              {{#if is_reader}}reader -{{/if}}
              {{#if is_publisher}}publisher -{{/if}}
              {{#if is_admin}}admin -{{/if}}
              <span class="fw-bold fs-5">{{auth_user.u_Name}}</span>
            </a>
            <ul class="dropdown-menu">
              {{#if is_admin}}
              <li><a class="dropdown-item" href="/admin">For admin</a></li>
              {{/if}}
              <li><a class="dropdown-item" href="/account/profile">Profile</a></li>
              <li><a class="dropdown-item" href="/account/change-password">Change password</a></li>
              <li><a class="dropdown-item" href="javascript:$.post('/account/logout').done(_ => location.reload());">Log out</a></li>
            </ul>
          </li>
        {{else}}
          <li class="nav-item mx-2">
            <button
              type="button"
              class="nav-link btn btn-light border-0 rounded d-flex align-items-center"
              data-bs-toggle="modal"
              data-bs-target="#login"
            >
              <i class="bi bi-box-arrow-in-right mx-1"></i>
              Log in
            </button>
          </li>
          <li class="nav-item">
            <button
              type="button"
              class="nav-link btn btn-light border-0 rounded d-flex align-items-center"
              data-bs-toggle="modal"
              data-bs-target="#signup"
            >
              <i class="bi bi-pencil-square mx-1"></i>
              Sign up
            </button>
          </li>
        {{/if}}
      </ul>
    </div>
  </div>
</nav>

{{>login_modal}}
{{>signup_modal}}
{{>forget_password_modal}}



<script src="/public/scripts/search.js"></script>
<script src="/public/scripts/sign_up.js"></script>
<script src="/public/scripts/log_in.js"></script>
<script src="/public/scripts/forget_password.js"></script>
