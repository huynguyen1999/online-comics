<div class="modal fade" id="forget_password" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Forget Password</h5>
      </div>
      <div class="modal-body" autocomplete="off">
        <div class="mb-3" id="form_forget_password">
          <div id="form_email">
            <label for="fp_email" class="col-form-label">Email</label>
            <input
              type="email"
              class="form-control"
              id="fp_email"
              name="fp_email"
            />
          </div>
          <div id="form_otp">
            <label for="fp_otp" class="col-form-label">OTP</label>
            <input type="text" class="form-control" id="fp_otp" name="fp_otp" />
          </div>
          <div id="form_change_password">
            <label for="fp_new_password" class="col-form-label">New password</label>
            <input
              type="password"
              class="form-control"
              id="fp_new_password"
              name="fp_new_password"
            />
          </div>
        </div>
      </div>
      <div
        class="modal-footer d-flex justify-content-between align-items-center"
        id="#fw_footer"
      >
        <div class="d-flex">
          <a
            class="btn btn-transparent fs-6 fw-bold"
            data-bs-toggle="modal"
            href="#login"
            role="button"
          >Log in</a>
          <h3>|</h3>
          <a
            class="btn btn-transparent fs-6 fw-bold"
            data-bs-toggle="modal"
            href="#signup"
            role="button"
          >Sign up</a>
        </div>
        <div>
          <button
            type="button"
            id="btn_change_password"
            class="btn btn-primary"
          >Change password</button>
          <button
            type="button"
            id="btn_validate_otp"
            class="btn btn-primary"
          >Validate OTP</button>
          <button type="button" id="btn_send_otp" class="btn btn-primary">Send
            OTP</button>
        </div>
      </div>
    </div>
  </div>
</div>