<div class="container my-3">
  <div class="d-flex justify-content-between">
    <div class="w-25">
      <div class="p-3 d-flex align-items-center">
        <i class="bi bi-person-circle fs-5 mx-2"></i>
        <a href="/account/profile" class="text-decoration-none text-dark fs-5">
          Profile</a>
      </div>
      <div class="p-3 bg-dark text-white d-flex align-items-center">
        <i class="bi bi-key fs-5 mx-2"></i>
        <a
          href="/account/change-password"
          class="text-decoration-none text-white fs-5"
        >
          Change password</a>
      </div>
      {{#if is_publisher}}
        <div class="p-3 d-flex align-items-center">
          <i class="bi bi-archive mx-2"></i>
          <a
            href="/publisher/your-comics"
            class="text-decoration-none text-dark fs-5"
          >
            Your Comics</a>
        </div>
      {{/if}}
    </div>
    {{#with auth_user}}
      <form
        class="mx-5 w-75"
        action="/account/change-password"
        method="POST"
        id="form_change_password"
      >
        <div class="mb-3">
          <label for="">Current password</label>
          <input
            type="password"
            class="form-control"
            id="current_password"
            name="current_password"
          />
        </div>
        <div class="mb-3">
          <label for="">New password</label>
          <input
            type="password"
            class="form-control"
            id="new_password"
            name="new_password"
          />
        </div>
        <div class="mb-3">
          <label for="">Confirm password</label>
          <input
            type="password"
            class="form-control"
            id="confirm_password"
            name="confirm_password"
          />
        </div>
        <div class="d-flex justify-content-center">
          <button class="btn btn-success w-50" type="submit">
            Change
          </button>
        </div>
      </form>
    {{/with}}
  </div>
</div>

<script src="/public/scripts/change_password.js"></script>